---
import LottieAnimation from 'astro-integration-lottie/Lottie.astro';

const services = [
  {
    step: '01',
    name: 'Data Strategy & Architecture',
    description:
      'We help you chart your data strategy from the ground up. We’ll align your cultural and technical approach, build a roadmap that fits your business goals, and jumpstart your journey so you can use your data effectively from day one.',
  },
  {
    step: '02',
    name: 'Data Pipeline Setup',
    description:
      'We’ll get your data flowing seamlessly by connecting your key data sources and setting up pipelines, so all your information is in one place and ready to use.',
  },
  {
    step: '03',
    name: 'BI Dashboards and Reporting',
    description:
      'We turn your raw data into clear, actionable dashboards and reports, giving you real-time insights that help you make decisions without digging through spreadsheets.',
  },
  {
    step: '04',
    name: 'Business Process Automation',
    description:
      'We streamline your manual workflows by automating repetitive tasks, so you can focus on what matters most and let the tech handle the rest.',
  },
];
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-12 sm:gap-16">
      <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">What We Do</h2>
      <div class="grid gap-8 lg:grid-cols-2">
        {
          services.map((service) => (
            <div class="flex flex-col gap-12 rounded-3xl bg-primary-500/10 px-6 py-8 dark:bg-primary-400/10">
              <p class="text-sm">{service.step}</p>
              <div class="flex flex-col gap-4">
                <h3 class="text-xl font-medium">{service.name}</h3>
                <p class="text-base text-primary-950/70 dark:text-primary-200/70 sm:text-lg">
                  {service.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>
      <!-- <div class="lottie-wrapper">
        <LottieAnimation src="assets/lottie.json" autoplay="visible" />
      </div>
      <style>
        .lottie-wrapper {
          width: 100%;
          max-width: 600px;
          margin: 0 auto;
        }
      </style> -->
    </div>
  </div>
</section>
